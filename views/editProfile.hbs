{{>navbar}}
<div id="profile">
    <div class="container">
        <div id="profile-row" class="row justify-content-center align-items-center">
            <div id="profile-column" class="col-md-6">
                <div id="profile-box" class="col-md-12">
                    <form id="profile-form" class="form" action="/editProfile" method="POST">
                        {{!-- <input type="hidden" name="?_method" value="PUT"> --}}
                        <h3 class="text-center text-info">Edit Your Profile</h3>
                        <div class="form-group">
                            <label for="firstName" class="text-info">FirstName:</label><br>
                            <input type="text" name="firstName" value="{{profile.firstName}}" id="firstName"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="lastName" class="text-info">LastName:</label><br>
                            <input type="text" name="lastName" value="{{profile.lastName}}" id="lastName"
                                class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="gender" class="text-info">Gender:</label><br>
                            <input type="text" name="gender" value="{{profile.gender}}" id="gender"
                                class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="profession" class="text-info">Profession:</label><br>
                            <input type="text" name="profession" value="{{profile.profession}}" id="profession"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="about" class="text-info">About:</label><br>
                            <input type="text" name="about" value="{{profile.about}}" id="about" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>