{{>navbar}}

<h1 id="header">YOUR ACCOUNT</h1>
<hr id="header-line">


<div class="container user-profile">
    <div method="post">
        <div class="row">
            <div class="col-md-4">
                <div id="svg"><img src="image/plant.svg" alt=""></div>
            </div>
            <div class="col-md-8">
                <div class="row my-2">
                    <div class="profile-head col-md-6">
                        <h5>
                            {{profile.firstName}} {{profile.lastName}}
                        </h5>

                    </div>
                    <div class="col-md-6">
                        <a class="profile-edit-btn" href=" /editProfile">Edit Profile</a>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">
                        <label>First Name</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{profile.firstName}}</p>
                    </div>
                    <div class="col-md-6">
                        <label>Last Name</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{profile.lastName}}</p>
                    </div>
                    <div class="col-md-6">
                        <label>Email</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{user.email}}</p>
                    </div>
                    <div class="col-md-6">
                        <label>Gender</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{ profile.gender}}</p>
                    </div>
                    <div class="col-md-6">
                        <label>Profession</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{ profile.profession }}</p>
                    </div>
                    <div class="col-md-6">
                        <label>About</label>
                    </div>
                    <div class="col-md-6">
                        <p>{{ profile.about }}</p>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>